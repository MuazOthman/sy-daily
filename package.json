{
  "name": "sy-daily",
  "version": "1.0.0",
  "description": "A bot that collects news about Syria from a curated list of sources and posts daily summaries to Telegram",
  "scripts": {
    "start": "ts-node src/local.ts",
    "build": "rimraf .aws-sam && rimraf lambda && ts-node esbuild.config.ts",
    "predeploy": "npm run build",
    "deploy": "./deploy.sh",
    "register-webhook": "dotenv -e .env -- ts-node src/registerTelegramWebhook.ts",
    "ts-node": "ts-node",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "sam:build": "sam build",
    "sam:local": "sam local start-lambda",
    "sam:invoke": "npm run build && sam build && dotenv -e .env -- sam local invoke NewsCollectorFunction",
    "sam:invoke:event": "dotenv -e .env -- sam local invoke NewsCollectorFunction -e events/schedule-event.json",
    "sam:dev": "npm run build && sam build && sam local start-lambda"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "axios": "^1.11.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "grammy": "^1.38.2",
    "input": "^1.0.1",
    "jsdom": "^26.1.0",
    "lodash": "^4.17.21",
    "openai": "^4.97.0",
    "telegram": "^2.26.22",
    "twitter-api-sdk": "^1.2.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/express": "^5.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.15.11",
    "@vitest/ui": "^3.2.4",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.23.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}